<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#EADDE1">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.124"
        tools:layout_editor_absoluteX="0dp">

        <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            app:cardCornerRadius="7dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_marginLeft="35dp"
            app:cardCornerRadius="7dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_marginLeft="35dp"
            app:cardCornerRadius="7dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_marginLeft="35dp"
            app:cardCornerRadius="7dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15"
        tools:layout_editor_absoluteX="0dp">


        <TextView
            android:id="@+id/textView_topSell"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="48dp"
            android:text="Top Sell"
            android:textSize="13dp"
             />

        <TextView
            android:id="@+id/textView_women"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="48dp"
            android:text="Women"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/textView_home_living"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="48dp"
            android:text="Home and Living"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/textView_foods"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="48dp"
            android:text="Foods"
            android:textSize="12dp"
             />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="232dp"
        android:layout_height="146dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.22">


        <ViewFlipper
            android:id="@+id/viewflipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:autoStart="true"
            android:flipInterval="2000">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/shirt_col" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bata_template_1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/adv1" />

        </ViewFlipper>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="380dp"
        android:layout_height="220dp"
        android:layout_margin="26dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.851">

        <ImageView
            android:layout_width="370dp"
            android:layout_height="210dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/adv1" />

        <TextView
            android:id="@+id/textView_food"
            android:layout_width="18dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/viewflipper"
            android:layout_toRightOf="@+id/viewflipper"
            android:text="Foods"
            android:textSize="12dp"
            tools:ignore="NotSibling,UnknownId" />


    </androidx.cardview.widget.CardView>






</androidx.constraintlayout.widget.ConstraintLayout>