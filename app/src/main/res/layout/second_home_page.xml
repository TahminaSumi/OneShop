            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#f2f2f2"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true"
            >

